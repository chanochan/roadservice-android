<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.issues.specialist.IssueDetailsActivity">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/issueDetailsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/acceptIssueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/accept"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/issueDetailsFragment"
        app:layout_constraintTop_toBottomOf="@+id/issueDetailsFragment" />

    <Button
        android:id="@+id/rejectIssueBtn"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/reject"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/issueDetailsFragment"
        app:layout_constraintTop_toTopOf="@+id/acceptIssueBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>